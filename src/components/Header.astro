---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
import { localizePath } from 'astro-i18next';
import { LanguageSelector } from 'astro-i18next/components';
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href={localizePath('/')}>About</HeaderLink>
		<HeaderLink href={localizePath('/blog')}>Blog</HeaderLink>
		<LanguageSelector />
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
